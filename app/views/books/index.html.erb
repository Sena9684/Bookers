<html>
<body>
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
       <td><span><%= book.title %></span></td>
   	   <td><span><%= book.body %></span></td>
   	   <td><%= link_to "show", book_path(book),class:"link" %></td>
       <td><%= link_to "edit", edit_book_path(book),class:"link"%></td>
       <td><%= link_to 'destroy', book_path(book.id), method: :delete,class:"link"%></td>
    </tr>
   <% end %>
  </tbody>
</table>

<h2>New book</h2>
<div>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
</div>  
<% end %>

<%= form_with model:@book, local:true do |f| %>
 
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
 
<% end %>



</body>
</html>